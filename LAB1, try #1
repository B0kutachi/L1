}

void Breakpoints5()
{
	int i = 0;
	char Array[9] {"abcd4E#r"};
	cout << "Your array is: ";
	for (int i = 0; i < 8; i++)
		cout << Array[i] << " ";
	cout << endl << "All letters in your array: ";
	for (i = 0; i < 8; i++)
	if ((Array[i] >= 'a' && Array[i] <= 'z') || (Array[i] >= 'A' && Array[i] <= 'Z'))
		cout << Array[i];
}

int main()
{
	int x;
	cout << "Enter your case: ";
	cin >> x;
	switch (x)
	{
	case 1:
		Breakpoints1();
		break;
	case 2:
		Breakpoints2();
		break;
	case 3:
		Breakpoints3();
		break;
	case 4:
		Breakpoints4();
		break;
	case 5:
		Breakpoints5();
		break;
	default:
		cout << "Error";
	}
	cout << endl << endl;
}
